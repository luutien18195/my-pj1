<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: Settings.user.avatar_size_for_comment,
    radius: "radius"), comment.user %>
  <span class="user_cm"><%= link_to comment.user.full_name, comment.user %></span>
  <span class="content_cm"><%= comment.content %></span>
  <span class="timestamp_cm">
    Commented <%= time_ago_in_words comment.created_at %> ago.
    <% if current_user == comment.user %>
      <%= link_to "delete", comment, method: :delete,
        data: {confirm: "You sure?"} %>
    <% end %>
  </span>
</li>
